<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/unknown_person"
            android:id="@+id/commentsReviewerImg"
            android:scaleType="centerCrop"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:clickable="false"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/commentsReviewerName"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/commentsReviewerImg"
            app:layout_constraintTop_toTopOf="@+id/commentsReviewerImg"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@drawable/profile_star" android:id="@+id/commentsStar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@+id/commentsReviewerImg" android:layout_marginTop="15dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/commentsStarNumber"
            app:layout_constraintEnd_toStartOf="@+id/commentsStar"
            app:layout_constraintTop_toTopOf="@+id/commentsReviewerImg"
            android:layout_marginTop="18dp" android:layout_marginEnd="3dp" android:fontFamily="@font/poppins"
            android:clickable="false"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/commentsDescription"
            app:layout_constraintTop_toBottomOf="@+id/commentsReviewerImg" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center" android:textColor="#000000"
            android:layout_marginTop="7dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/line_9" android:id="@+id/commentsBtmLine"
            app:layout_constraintTop_toBottomOf="@+id/commentsDescription" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>